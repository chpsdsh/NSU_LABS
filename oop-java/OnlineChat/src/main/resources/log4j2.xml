<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="ChatLogger" fileName="logs/chat.log" append="true">
            <PatternLayout pattern="%d{HH:mm:ss}: %msg%n" />
        </File>

    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="ChatLogger"/>
        </Root>
    </Loggers>
</Configuration>